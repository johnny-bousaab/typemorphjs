{
  "name": "typemorphjs",
  "version": "1.0.2",
  "description": "Typing animation library that supports Markdown, HTML, looping, backspacing, auto scrolling and more. Perfect for things like LLM outputs, documentations or any typing effect in a DOM environment. ",
  "author": "Johnny Bou Saab",
  "license": "MIT",
  "homepage": "https://johnny-bousaab.github.io/typemorphjs",
  "repository": "https://github.com/johnny-bousaab/typemorphjs.git",
  "keywords": [
    "typing",
    "animation",
    "typing-effect"
  ],
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "exports": {
    "import": "./dist/typemorph.esm.js"
  },
  "module": "./dist/typemorph.esm.js",
  "unpkg": "./dist/typemorph.umd.min.js",
  "scripts": {
    "test": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js",
    "test:memory": "node --expose-gc --experimental-vm-modules ./node_modules/jest/bin/jest.js",
    "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage",
    "test:coverage:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage --watch",
    "build": "rollup -c",
    "build:watch": "rollup -c --watch",
    "prepublishOnly": "npm run build"
  },
  "type": "module",
  "source": "src/typemorph.js",
  "devDependencies": {
    "@rollup/plugin-commonjs": "^29.0.0",
    "@rollup/plugin-node-resolve": "^16.0.3",
    "@rollup/plugin-terser": "^0.4.4",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "jsdom": "^27.1.0",
    "np": "^10.2.0",
    "rollup": "^4.53.2",
    "rollup-plugin-gzip": "^4.1.1"
  },
  "dependencies": {
    "dompurify": "^3.3.0",
    "marked": "^16.4.2"
  }
}
